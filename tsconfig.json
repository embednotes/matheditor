{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "lib": ["es2017", "DOM"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "exclude": ["dist"],
    "display": "Recommended"
}